<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- 웹 : 기본페이지 -->
    <definition name="layout" template="/WEB-INF/tiles/layout/layout.jsp">
        <put-attribute name="head" value="/WEB-INF/jsp/common/head.jsp" />
        <put-attribute name="header" value="/WEB-INF/jsp/common/header.jsp" />
    </definition>
    
    <definition name="footer-layout" template="/WEB-INF/tiles/layout/footer-layout.jsp">
        <put-attribute name="head" value="/WEB-INF/jsp/common/head.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/common/footer.jsp" />
    </definition>
    
	<definition name="*" extends="layout">
		<put-attribute name="content" value="/WEB-INF/jsp/views/{1}.jsp" />
    </definition>
    
    <definition name="info" extends="footer-layout">
		<put-attribute name="content" value="/WEB-INF/jsp/views/info.jsp" />
    </definition>
  
    <definition name="*/*" extends="layout">
		<put-attribute name="content" value="/WEB-INF/jsp/views/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>
